<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/Layout"
    android:background="@color/red"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.lectorvin.light.MainActivity">

    <Button
        android:onClick="setBackgroundColor"
        android:background="@android:color/transparent"
        android:id="@+id/color_button"
        android:text="@string/check"
        android:textSize="50sp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="368dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/color_text"
        android:labelFor="@+id/color_text"
        android:digits="0123456789ABCDEF"
        android:inputType="textCapCharacters"
        android:maxLength="6"
        android:background="@android:color/white"
        android:text="@string/red_color"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/color_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="150dp"
        android:layout_width="100dp"
        android:layout_height="25dp" />

    <ImageButton
        android:contentDescription="@string/plus"
        android:id="@+id/plus8_button"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/plus"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/color_text"
        app:layout_constraintTop_toTopOf="@+id/color_text"
        android:layout_height="25dp"
        android:layout_width="25dp" />

    <ImageButton
        android:contentDescription="@string/minus"
        android:background="@android:color/transparent"
        android:id="@+id/minus8_button"
        android:scaleType="fitCenter"
        android:src="@drawable/minus"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@+id/color_text"
        app:layout_constraintTop_toTopOf="@+id/color_text"
        android:layout_width="25dp"
        android:layout_height="25dp"  />

    <ImageButton
        android:contentDescription="@string/plus"
        android:id="@+id/plusF_button"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/plus"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/color_text"
        app:layout_constraintTop_toBottomOf="@+id/plus8_button"
        android:layout_height="25dp"
        android:layout_width="25dp" />

    <ImageButton
        android:contentDescription="@string/minus"
        android:background="@android:color/transparent"
        android:id="@+id/minusF_button"
        android:scaleType="fitCenter"
        android:src="@drawable/minus"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/color_text"
        app:layout_constraintTop_toBottomOf="@+id/minus8_button"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageButton
        android:contentDescription="@string/plus"
        android:id="@+id/plusFF_button"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/plus"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/color_text"
        app:layout_constraintTop_toBottomOf="@+id/plusF_button"
        android:layout_height="25dp"
        android:layout_width="25dp" />

    <ImageButton
        android:contentDescription="@string/minus"
        android:background="@android:color/transparent"
        android:id="@+id/minusFF_button"
        android:scaleType="fitCenter"
        android:src="@drawable/minus"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/color_text"
        app:layout_constraintTop_toBottomOf="@+id/minusF_button"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <TextView
        android:text="@string/numFF"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/plusFF_button"
        app:layout_constraintTop_toTopOf="@+id/plusFF_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/numF"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/plusF_button"
        app:layout_constraintTop_toTopOf="@+id/plusF_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/num8"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/plus8_button"
        app:layout_constraintTop_toTopOf="@+id/plus8_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>
